{
  "compilerOptions": {
    "rootDir": "src",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "newLine": "lf",
    "target": "es2020",
    "pretty": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnusedLabels": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "declaration": true,
    "strictPropertyInitialization": false,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
  ],
  "volta": {
    "node": "^14.19.1",
    "yarn": "^1.22.18"
  }
}